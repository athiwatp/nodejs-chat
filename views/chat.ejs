<% include main/header.ejs %>

    <div class="container" id="main">
        <div class="row">
            <div class="col-xs-12 col-sm-4">

                <div class="alert alert-info">
                    Welcome <%=username%>
                </div>

                <form id="chat-settings">
                    <fieldset>
                        <legend>Settings</legend>
                        <div class="form-group">
                            <div class="checkbox checkbox-primary">
                                <input id="notificationSound" name="notificationSound" type="checkbox" checked="">
                                <label for="notificationSound">Turn on notification's sound</label>
                            </div>

                            <div class="checkbox checkbox-primary">
                                <input id="blinkTitle" name="blinkTitle" type="checkbox" checked="">
                                <label for="blinkTitle">Blink title if not on same tab</label>
                            </div>
                        </div>
                    </fieldset>
                </form>

                <fieldset>
                    <legend>Users</legend>
                    <ul class="nav nav-pills nav-stacked active-users">
                        <li data-to="all"><a href="javascript:void(0)">Everyone</a></li>
                    </ul>
                </fieldset>

                <br /><br />

            </div>
            <div class="col-xs-12 col-sm-8">

                <div class="panel panel-default">
                    <div class="panel-heading">Messages with <b><span class="chat-to"></span></b></div>
                    <div class="messages">

                    </div>
                    <div class="panel-footer">
                        <form method="post" action="" id="send-message">
                            <div class="row">
                                <div class="col-xs-8">
                                    <input type="text" class="form-control" name="message" id="message" placeholder="Message..." required autofocus/>
                                </div>
                                <div class="col-xs-4">
                                    <button type="submit" class="btn btn-primary btn-block">Send</button>
                                </div>
                            </div>
                        </form>

                        <audio id="notification" class="hidden">
                            <source src="/public/notification.mp3" type="audio/mpeg">
                        </audio>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script type="text/javascript">
        var $username = '<%=username%>';
    </script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="public/main.js"></script>

<% include main/footer.ejs %>